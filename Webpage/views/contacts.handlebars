<!DOCTYPE html>
<html>

<div class="wrapper">
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0 text-dark">Contacts List</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">Contacts List</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->



    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title">New Contact</h3>
            </div>
            <div class="card-body">
              <form action="/contacts/add" method="POST">
                <div class="input-group mb-1">
                  <div class="col-5">
                    <div class="input-group mb-1">
                      <div class="input-group-prepend">
                        <div class="input-group-text">
                          <span class="fas fa-user pr-1"></span>
                          <span>Name</span>
                        </div>
                      </div>
                      <input type="text" name="name" id="name" placeholder="John Doe">

                    </div>
                  </div>

                  <div class="col-5">
                    <div class="input-group mb-1">

                      <div class="input-group-prepend">
                        <div class="input-group-text">
                          <span class="fas fa-phone pr-1"></span>
                          <span>Phone</span>
                        </div>
                      </div>
                      <input type="text" name="number" id="number" placeholder="+353 85 2302163 ">

                    </div>
                  </div>
                  <div class="col-2">
                    <button class="btn btn-block bg-gradient-primary" type="submit">Add Contact</button>
                  </div>
                </div>
            </div>
            </forum>
          </div>

          <div class="card">
            <div class="card-header">
              <h3 class="card-title">Contact List</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-2">
              <table id="contacts_page" class="table table-bordered table-striped">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Number</th>
                    <th>Remove</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each contact}}
                  <tr>
                    <td>{{name}}</td>
                    <td>{{number}}</td>
                    <td class="text-center">
                      <button type="button" onclick="editContact('{{_id}}')"
                        class="btn btn-success ">Edit</button>
                      <button type="button" onclick="removeContact('{{_id}}')"
                        class="btn bg-gradient-danger ">Remove</button>
                    </td>
                  </tr>
                  {{/each}}
                </tbody>
                <tfoot>
                  <tr>
                    <th>Name</th>
                    <th>Number</th>
                    <th>Remove</th>
                  </tr>
                </tfoot>
              </table>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
</div>
<!-- ./wrapper -->

</html>
<!-- jQuery -->
<script src="/plugins/jquery/jquery.min.js"></script>
<!-- DataTables -->
<script src="/plugins/datatables/jquery.dataTables.js"></script>
<script src="/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>

<!-- page script -->
<script>
  $(function () {
    $('#contacts_page').DataTable({
      "columnDefs": [
        { "width": "20%", "orderable": false, "targets": 2 }
      ],
      "paging": true,
      "lengthChange": true,
      "searching": true,
      "ordering": true,
      "info": true,
      "autoWidth": false,
      "lengthMenu": [[10, 50, 100, -1], [10, 50, 100, "All"]]
    });
  });
</script>

</html>